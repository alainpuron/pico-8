-- mouse --

function mouse_init()

	mouse = {
			x=0,-- default value
			y=0,-- default value
			button = 0, -- default value
			sp = 51 -- sprite 
		}
		
		-- allows mouse usage
		poke(0x5f2d,1)

end

function mouse_update(mouse)
	
	-- sets the mouse conf
	mouse.y=stat(33) 
	mouse.x=stat(32)
	mouse.button = stat(34) -- left click
	on_click(mouse,inv,selected)
end

function on_click(mouse,inv,selected)
	
	-- value for left and right click
	local left_click = 1
	local	right_click = 2
	
	 holding_left = false

	if mouse.button == left_click and not holding_left then
	
		holding_left = true -- is holding left click 
		drag_update(mouse, inv,selection)

		print('left button clicked',7)
	end
	
	
	if mouse.button == right_click then
		print('right button clicked',7)
		drag_del(to_be_placed,mouse)
	end
	
end

