-- item inventory --
function inventory_init()
	
	inv = {
	
	{sprite = 3,x=0,y=0},--house
	{sprite = 5,x=0,y=0},--tree
	{sprite = 7,x=0,y=0},--tree

	}
	
	selection = 1
	
end

function inventory_draw(mouse)

    local inv_x = 0
				local inv_y = 125
				rectfill(inv_x, inv_y, inv_x + 130, inv_y - 15, 15)

				local selected_x = nil

				for i = 1, #inv do
		
    item_x = inv_x - 10 + 14 * i
    spr(inv[i].sprite, item_x, inv_y - 13, 2, 2)
				 
				
    -- check if mouse is near this item
    if abs(mouse.x - item_x) <= 8 and abs(mouse.y - (inv_y - 13)) <= 8 then
        selected_x = item_x
								selection = i
								
    end -- if
    
		end -- for

			-- draw selection rect if mouse is near any item
			if selected_x then
		    rect(selected_x, inv_y, selected_x + 14, inv_y - 14, 7)
						print(selected_x)
						spr(inv[selection].sprite,10,10,2,2)
						print(selection)

			end -- if

end

