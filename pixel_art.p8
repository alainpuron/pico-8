pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
function _init()
	mpx=0
	mpy=0
	poke(0x5f2d,1)
	sp = 51
	
	hx = 0
	hy = 0
	hsp = 3
	
	tx = 10
	ty = 0
	tsp = 5
	
end

function _update()
	mpy=stat(33)
	mpx=stat(32)
	
	
	mouse_btn = stat(34)



end

function _draw()
	cls()
	
	spr(hsp,hx,hy,2,2)
	spr(tsp,tx,ty,2,2)

	holding = false
	click_down = false
	
	if mouse_btn == 1 then
	--click_down = true
	
		if abs(mpx-hx)<=8 and abs(mpy-hy)<=8 and not holding then
		
			holding = true
			hx = mpx - 4
			hy = mpy - 4
			
		end
		
		if abs(mpx-tx)<=8 and abs(mpy-ty)<=8 and not holding then
		
			holding= true
			tx = mpx - 4
			ty = mpy - 4
			
		end
		
 end
 spr(sp,mpx,mpy)
end
