-- movement --
function move(plr)
	
	lastx = plr.x
	lasty = plr.y
	
	if (btn(⬅️)) plr.x-=plr.speed
	if (btn(➡️)) plr.x+=plr.speed
	if (btn(⬆️)) plr.y-=plr.speed
	if (btn(⬇️)) plr.y+=plr.speed
	if(btn(❎)) plr.y-=plr.jump
	
	
	-- if player can not move
	-- then move to last position
	if not can_move(plr.x,plr.y) then
	 plr.x = lastx
		plr.y = lasty 
	end

end


