-- player --

function player_init()

 -- player table
	plr={}
	plr.x = 2
	plr.y	=	3
	plr.jump = 1/2
	plr.speed = 1/8
	plr.sp = 0
	
	
end

function player_update()
	move(plr)
	gravity(plr)
end

function player_draw()
spr(plr.sp,plr.x*8,plr.y*8,1,1)
end
