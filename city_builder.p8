-- map base --
function base_map_init()
	
	base_map_tiles = {
	
	grass = 16,
	grass_light = 18,
	water = 32
	
	}
	
	base_map =	{}
	
	-- fills the base map
	for y=1, 130 do
	
			base_map[y] = {}
			
		for x=1,130 do 
			base_map[y][x] =rnd{base_map_tiles.grass,base_map_tiles.grass_light}
		end -- for(2)
		
	end -- for(1)
	

end

function draw_base_map(base_map)

	for y=1,#base_map do
		
		for x=1,#base_map[y] do
			
			local tile = base_map[y][x]
			spr(tile,(x-1)*8,(y-1)*8,2,2)
			
		end -- for(2)
		
	end -- for(1)
	
end
