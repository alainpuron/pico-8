-- mouse --
function mouse_init()

	mouse = {
	
		x=0,
		y=0,
		click = 0,
		sprite = 0
	
	}
	
end

function mouse_update(mouse)
	
	mouse.x=stat(32)
	mouse.y=stat(33)
	mouse.click = stat(34)
	poke(0x5f2d,1)
	
	-- functions --

end

function mouse_draw(mouse)
	spr(mouse.sprite,mouse.x,mouse.y,1,1)
end
