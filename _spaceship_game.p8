function ab_shoot(s)



	for s in all(alien) do

	local dx = plr.x - s.x
	local dy = plr.y - s.y
	local dist = sqrt(dx*dx + dy*dy)

	add(ab, {
	x= s.x-3 ,  
	y= s.y-7 , 
	dmg = 3, 
	sprite = 1,
	
	-- shoots toward the player
	spdx = dx / dist * 1,
	spdy = dy / dist * 1
	
	})



end
end


