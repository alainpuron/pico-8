function asteroid_init()

	-- asteroids table
	asteroids={}
	creation_time=0

end

function asteroid_update()

asteroid_creation()
asteroid_movement()
end

function asteroid_creation()

	creation_time+=1
	
	-- every second create
	local sp = flr(rnd({64,96,102}))
	
	if creation_time >= 30 then
	
	add(asteroids, {
	x=rnd(68) ,  
	y=-68 , 
	speed = 0.7,
	sprite = sp,
	exploded = false,
	animation_timer = 0,
	first_sprite = sp,
	points = 50
	
	})
	
	-- reset the creating time
		creation_time=0
		

end

end

function asteroid_movement()

	for a in all(asteroids) do	
			a.y += a.speed			
		outbound(a,asteroids)	
	end	
	
end



function asteroid_draw()
	
		for a in all(asteroids) do
	
			spr(a.sprite,a.x,a.y,2,2)
	
		end	

end
