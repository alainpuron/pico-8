pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()

// table for player values
	player ={
		x=63,
		y=63,
		// flip x
		fx=false,
		// flip y
		fy=false,
		// player sprite #
		ps=1
	}
	
end

function _update()

 // player movement
 // x movement (left n right)
 
 // left
	if btn(0) then
	
		//movement
	 player.x-=1
	 
	 // does not flip the spt
	 player.fx=false
	 
	 // spt being used
	 player.ps=1
	end
	 
	// right 
	if btn(1) then
	 player.x+=1
	 // flips the spt 
	 player.fx=true
	 player.ps=1

	end
	
	// y movement (up n down)
	// player down
	if btn(2) then
	 player.y-=1
	 // does not flip the spt
	 player.fy=false
	 player.ps=2

 end
 
	// player up
	if btn(3) then
	 player.y+=1
	 // does not flip the spt
	 player.fy=false
	 player.ps=2

	end

end

function _draw()

// cleans screen automatically
	cls()
	map()
	
// sprite for the player
// sprite # | x,y| width|height| flip x and flip y
	spr(player.ps,player.x,player.y,1,1,player.fx,player.fy)	


end
