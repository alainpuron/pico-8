-- paddle --


function paddle_init()

	paddle = {
		x=0,
		y=110,
		middle = 4, -- 8 pixel long,half is 4
		sprite = 16
	}
	
end

function paddle_update(paddle)
	
	-- paddle only moves on x axis 
	paddle.x=stat(32) -- x
	
	-- allows mouse to work
	poke(0x5f2d,1)
	
	-- functions --  
	
	
	
end

function paddle_draw(paddle)
	
	-- draw the paddle 
	spr(paddle.sprite,paddle.x,paddle.y,1,1)
	
end


