function mouse_movement(mouse)
		
		-- tile coordinates
		tile_x = flr(mouse.x / 8)
  tile_y = flr(mouse.y / 8)
		
		-- converting tile coordinates to pixel coordinates
		cursor_x = tile_x * 8
  cursor_y = tile_y * 8

end

function mouse_tile(mouse)

	print(mget(tile_x,tile_y))

end

function is_mouse_over(mouse,toolbar_base)
		
		local starting_x = toolbar_base.s_width
		local starting_y =	toolbar_base.s_height
		local ending_x		 =	toolbar_base.e_width
		local	ending_y 		=	toolbar_base.e_height
		
		-- is over 
		if cursor_x > starting_x and cursor_x < ending_x and cursor_y > starting_y and cursor_y < ending_y then
				return true
			else 
				return false
		end
		
		 
end
