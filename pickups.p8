-- movement --
function move(o)

	if (btn(0)) o.x-=1 o.fx=false o.ps=6
	if (btn(1)) o.x+=1	o.fx=true  o.ps=6
	if (btn(2)) o.y-=1	o.fy=false o.ps=34
	if (btn(3)) o.y+=1 o.fy=false o.ps=0

end
