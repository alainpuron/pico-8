function iplr() -- init player

	plr={
		x=63,
		y=63,
		fx=false,
		fy=false,
		ps=0,
		f_frame=0,
		l_frame=4,
		animation_speed=10,
		sprtimer = 0
		
	}		
end


function uplr() -- update player
	move(plr)
	
end


function dplr() -- draw player
	spr(plr.ps, plr.x, plr.y, 2, 2, plr.fx, plr.fy)
end

