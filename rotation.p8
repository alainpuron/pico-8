pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
  angle = 0
end

function _update()
  if btn(⬅️) then
    angle += 0.05
  end
  if btn(➡️) then
    angle -= 0.05
  end
end

function _draw()
  cls()

  cx, cy = 64, 64
  

  -- draw a spinning line (like a spaceship pointer)
  x1 = cx + cos(angle) * 6
  y1 = cy + sin(angle) * 6
  x2 = cx - cos(angle) * 3
  y2 = cy - sin(angle) * 3
		
  line(x1, y1, x2, y2, 8)
end

